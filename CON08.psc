Algoritmo CON08
// 00595740 MIguel Sebastian Cinco Fragoso
// Ing. en TI
	Definir numero Como Entero;
    
    Escribir "Ingrese un número del 1 al 12: ";
    Leer numero;
    
    Segun numero Hacer
        1: Escribir "Enero";
        2: Escribir "Febrero";
        3: Escribir "Marzo";
        4: Escribir "Abril";
        5: Escribir "Mayo";
        6: Escribir "Junio";
        7: Escribir "Julio";
        8: Escribir "Agosto";
        9: Escribir "Septiembre";
        10: Escribir "Octubre";
        11: Escribir "Noviembre";
        12: Escribir "Diciembre";
        De Otro Modo:
            Escribir "Número inválido. Debe estar entre 1 y 12.";
    FinSegun
FinAlgoritmo

